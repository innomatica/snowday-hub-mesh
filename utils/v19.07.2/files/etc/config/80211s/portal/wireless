config wifi-iface 'mesh0'
	option device 'radio0'
	option ifname 'mesh0'
	option network 'nwi_mesh0'
	option mode 'mesh'
	option mesh_id 'OpenWrtMesh'
	option encryption 'psk/aes'
	option key 'yourMeshKey'
